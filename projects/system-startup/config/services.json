[
  {
    "name": "webapp",
    "path": "/",
    "url": "http://webapp:3000",
    "routes": [
      {
        "name": "webapp-root",
        "paths": [
          "/"
        ],
        "hosts": [
          "amadita.loc"
        ],
        "strip_path": false,
        "preserve_host": true
      }
    ],
    "plugins": [
      {
        "id": "c4161664-5622-4518-9882-5b8f899cd6d0",
        "name": "cors",
        "config": {
          "origins": [
            "http://amadita.loc:8000"
          ],
          "methods": [
            "GET",
            "POST",
            "PUT",
            "PATCH",
            "DELETE",
            "HEAD"
          ],
          "headers": [
            "Accept",
            "Accept-Version",
            "Content-Length",
            "Content-MD5",
            "Content-Type",
            "Date",
            "X-Auth-Token",
            "X-Access-Token",
            "Authorization"
          ],
          "exposed_headers": ["X-Access-Token"],
          "credentials": true,
          "max_age": 3600
        },
        "enabled": true
      },
      {
        "id": "1d771f5f-a0cb-476e-8c96-09cb576e77aa",
        "name": "oidc",
        "config": {
          "client_id": "kong",
          "client_secret": "<CLIENT_SECRET>",
          "discovery": "http://accounts.amadita.loc:8000/auth/realms/amadita/.well-known/openid-configuration",
          "bearer_only": "no",
          "realm": "amadita",
          "introspection_endpoint": "http://accounts.amadita.loc:8000/auth/realms/amadita/protocol/openid-connect/token/introspect"
        },
        "enabled": true
      }
    ]
  },
  {
    "name": "iam",
    "path": "/",
    "url": "http://iam:8080/",
    "routes": [
      {
        "name": "iam-root",
        "paths": [
          "/"
        ],
        "hosts": [
          "accounts.amadita.loc"
        ],
        "strip_path": false,
        "preserve_host": true
      }
    ]
  },
  {
    "name": "konga",
    "path": "/",
    "url": "http://konga:1337/",
    "routes": [
      {
        "name": "konga-root",
        "paths": [
          "/"
        ],
        "hosts": [
          "konga.amadita.loc"
        ],
        "strip_path": false,
        "preserve_host": true
      }
    ],
    "plugins": [
      {
        "id": "2d630754-41a8-453b-947f-70f695815cd1",
        "name": "cors",
        "config": {
          "origins": ["http://konga.amadita.loc:8000"],
          "methods": [
            "GET",
            "POST",
            "PUT",
            "PATCH",
            "DELETE",
            "HEAD"
          ],
          "headers": [
            "Accept",
            "Accept-Version",
            "Content-Length",
            "Content-MD5",
            "Content-Type",
            "Date",
            "X-Auth-Token",
            "X-Access-Token",
            "Authorization"
          ],
          "exposed_headers": ["X-Access-Token"],
          "credentials": true,
          "max_age": 3600
        },
        "enabled": true
      }
    ]
  }
]
